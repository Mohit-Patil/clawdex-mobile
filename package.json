{
  "name": "codex-mobile-control",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "mobile": "npm run -w @codex/mobile start",
    "ios": "npm run -w @codex/mobile ios",
    "android": "npm run -w @codex/mobile android",
    "bridge": "BRIDGE_WORKDIR=$(pwd) npm run -w @codex/mac-bridge dev",
    "build": "npm run --workspaces build",
    "typecheck": "npm run --workspaces typecheck",
    "lint": "npm run --workspaces lint",
    "test": "npm run test -w @codex/mac-bridge && npm run test -w @codex/mobile"
  },
  "dependencies": {
    "@types/react": "^19.1.10",
    "react": "^19.1.0",
    "react-native": "^0.81.5"
  },
  "overrides": {
    "minimatch": "10.2.2",
    "@react-navigation/drawer": {
      "react-native-reanimated": "4.1.1"
    },
    "react-native-drawer-layout": {
      "react-native-reanimated": "4.1.1"
    },
    "react-native-reanimated": "4.1.1",
    "react-native-worklets": "0.5.1"
  }
}
